#!/bin/bash
set -eux

# Precompile environment
julia --project=binder -e 'using Pkg; Pkg.instantiate(); Pkg.precompile()'

# Run Pluto on Binderâ€™s expected port (8888) without secrets
exec julia --project=binder -e '
using Pluto
Pluto.run(
    host="0.0.0.0",
    port=8888,
    launch_browser=false,
    require_secret_for_access=false,
    require_secret_for_open_links=false
)'
